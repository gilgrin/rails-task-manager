<h1>My tasks</h1>
<ul class="my-tasks" style="list-style: none">
  <% @tasks.each do |task| %>
  <li>
    <% if task.completed == true %>
      <i class="far fa-check-square"></i>
    <% else %>
      <i class="far fa-square"></i>
    <% end %>
    <%= link_to task.title, task_path(task.id) %>
    <%= link_to '<i class="fas fa-trash"></i>'.html_safe, task_path(task), method: :delete, data: { confirm: "Delete this taks?" } %>
  </li>
  <% end %>
</ul>
<hr>
<div class="add-post">
  <!-- <i class="fas fa-plus"></i> -->
  <%= link_to "Add a new task", new_path, class: 'btn btn-success' %>
</div>
